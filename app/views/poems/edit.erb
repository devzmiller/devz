<form class="update-poem" action="/poems/<%= @poem.id %>" method="post">
  <input type="hidden" name="_method" value="put">
  <div>
    <label for="title">Title</label>
    <input type="text" name="title" value="<%= @poem.title %>">
  </div>
  <div>
    <textarea name="body" rows="8" cols="80"><%= @poem.body %></textarea>
  </div>
  <div>
    <input type="submit" value="Submit">
  </div>
</form>
