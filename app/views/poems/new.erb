<form class="new-poem" action="/poems" method="post">
  <div>
    <label for="title">Title</label>
    <input type="text" name="poem[title]">
  </div>
  <div>
    <textarea name="poem[body]" rows="8" cols="80" placeholder="Write your poem here..."></textarea>
  </div>
  <div>
    <input type="submit" value="Submit Your Poem">
  </div>
</form>
